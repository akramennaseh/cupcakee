{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
<div class="col d-flex justify-content-center"style="margin-left:45px;width:auto">

{% for auteur in auteurs %}

<div class="card mb-3"  >
  <img src="https://picsum.photos/720/200" class="card-img-top" alt="...">
  <div class="card-body" >
    <h5 class="card-title">{{auteur.NomPrenom}}</h5>
    <p class="card-text">{{auteur.nationalite}}</p>
    <p class="card-text"><small class="text-muted">{{auteur.DateDeNaissance}}</small></p>
    <a href="{{ path('auteur_details', {'id': auteur.Id}) }}" class="btn btn-primary">View auteur</a>
  </div>
{% endfor %}
</div>
<div class ="d-flex justify-content-center">
      {% do auteurs.setPageRange(2) %}
      {{ knp_pagination_render(auteurs, 'base/pagination.html.twig') }}
</div>

{% endblock %}
