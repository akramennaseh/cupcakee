{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!{% endblock %}

{% block body %}
<div class="card mb-3">
  <img src="https://picsum.photos/720/200" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"> {{livre.titre}}</h5>
    <p class="card-text"> Isbn :{{livre.Isbn}}</p>
    <p class="card-text">NombredePage{{livre.NombrePages}}</p>
    <p class="card-text">Date de publication: {{livre.DateDeParution|date('d/m/Y')}}</p>
    <p class="card-text"><small class="text-muted">note {{livre.Note}}/20</small></p>
  </div>
</div>

{% endblock %}